/*
 * Test configuration for sc-sra-nf pipeline
 * Uses local STAR installation
 */

// Disable Docker for test
docker.enabled = false

// Environment configuration
env {
    PATH = "/Users/miana/starsolo_work/bin:$PATH"
}

params {
    // Test parameters
    star_threads = 8

    // Required parameters
    debug = false
    use_container = false
    container_engine = "docker"
    quantifier = "starsolo"  // Use STARsolo instead of CellRanger
}

// Process settings
process {
    executor = 'local'
    errorStrategy = 'terminate'

    withName: 'STARSOLO_COUNT_AUTO' {
        cpus = 8
        memory = '32 GB'
    }
}
