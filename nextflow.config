/*
 * Default Nextflow configuration
 * Sets default parameter values for the pipeline
 */

params {
    // ===== Output Settings =====
    outdir = './results'

    // ===== Optional Quantification =====
    // STARsolo settings (for non-10x samples)
    star_index = null
    star_threads = 8

    // 10x Genomics barcode whitelists for STARsolo
    whitelist_10x_v2 = "${projectDir}/resources/whitelists/737K-august-2016.txt"
    whitelist_10x_v3 = "${projectDir}/resources/whitelists/3M-february-2018.txt"

    // ===== Optional Post-processing =====
    // RNA velocity analysis
    run_velocyto = false
    velocyto_gtf = null
    velocyto_rmsk = null

    // CellRanger BAM creation (needed for velocyto)
    cellranger_create_bam = true
}

// Default process settings
process {
    executor = 'local'
    errorStrategy = 'terminate'
}

// Enable Docker for containerized processes
docker {
    enabled = true
    runOptions = '-u $(id -u):$(id -g)'
}

// Enable process echo by default for debugging
process.echo = false
